{
  "name": "gostudy",
  "version": "2.0.0",
  "description": "GoStudy! - Intelligent Learning Platform. Transform study materials into AI-powered study plans using active recall and spaced repetition.",
  "main": "backend/server.js",
  "private": true,
  "license": "SEE LICENSE IN LICENSE.md",
  "author": {
    "name": "GoStudy Inc.",
    "url": "https://gostudy-test.vercel.app"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/project-gostudy/gostudy.git",
    "private": true
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "build": "echo 'Build process placeholder - frontend uses Vercel CDN'",
    "backend:test": "jest backend/",
    "frontend:test": "jest --config jest.frontend.config.js"
  },
  "keywords": [
    "study",
    "ai",
    "education",
    "active-recall",
    "spaced-repetition",
    "learning",
    "memory-palace"
  ],
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "mammoth": "^1.6.0",
    "axios": "^1.6.0",
    "firebase-admin": "^12.0.0",
    "zod": "^3.22.4",
    "tesseract.js": "^5.0.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "@babel/preset-env": "^7.23.0",
    "eslint": "^8.51.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "prettier": "^3.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "backend/**/*.js",
      "!backend/server.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "publishConfig": {
    "access": "restricted"
  },
  "files": [
    "backend/",
    "LICENSE.md",
    "README.md"
  ],
  "preferGlobal": false,
  "bin": {},
  "restrictions": {
    "modification": "Allowed for local development and personal use",
    "distribution": "Strictly prohibited. Modified versions cannot be distributed, deployed, or commercialized",
    "sublicensing": "Not permitted"
  },
  "maintainers": [
    {
      "name": "GoStudy Team",
      "email": "dev@gostudy.ai",
      "url": "https://gostudy.ai"
    }
  ],
  "bugs": {
    "url": "https://github.com/gostudy/gostudy/issues",
    "email": "support@gostudy.ai"
  },
  "homepage": "https://gostudy.ai",
  "funding": {
    "type": "individual",
    "url": "https://gostudy.ai/pricing"
  }
}